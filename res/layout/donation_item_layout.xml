<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Donor"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/donation_donorEmailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="abc@hope.com"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="120dp"
            android:text="Food Type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/green_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donation_foodTypeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="Raw"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/green_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="120dp"
            android:text="Expires on"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/red_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donation_expTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="Tue, Sept 25, &apos;12"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4444" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="120dp"
            android:text="Weight/Qty"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/purple_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donation_wtTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="5 lbs"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/purple_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="120dp"
            android:text="Pick on"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/orange_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donation_pickupDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="Sun, Sept 23, &apos;12"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/orange_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:minWidth="120dp"
            android:text="between"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue_dark" />

        <TextView
            android:id="@+id/donation_pickupTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="5:00 pm and 6:00 pm"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/donation_pickupInfoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Optional Info"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/donation_pickupBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:minWidth="128dp"
        android:text="Pickup"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

</LinearLayout>